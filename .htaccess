# === PHP Settings ===
php_flag short_open_tag on
php_flag display_errors off
php_value error_reporting 0

# === Security: Block sensitive files ===
<FilesMatch "(^\.env|composer\.json|composer\.lock|package\.json|yarn\.lock|artisan|server-status|phpinfo\.php|readme\.md|README\.txt)$">
    Require all denied
</FilesMatch>

# === Block known malicious patterns ===
RewriteCond %{QUERY_STRING} (\.env|wp-config|eval\(|base64_encode|/etc/passwd|/proc/self/environ) [NC]
RewriteRule .* - [F,L]

# === Disable directory browsing ===
Options -Indexes

# === Block bad bots ===
RewriteCond %{HTTP_USER_AGENT} (MJ12bot|AhrefsBot|SemrushBot|crawler|python-requests|curl|scrapy|lwp) [NC]
RewriteRule .* - [F,L]

# === Force HTTPS ===
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# === Redirect old subdomain (if needed) ===
RewriteCond %{HTTP_HOST} ^(www\.)?rubitcubedev\.com$ [NC]
RewriteRule ^(.*)$ "https://ecobags.rubitcubedev.com/$1" [R=301,L]

# === Friendly URLs ===
RewriteRule ^ShamsNaturals-Home$ index.php [NC,L]
RewriteRule ^Products/([0-9]+)/([0-9]+)$ products.php?categoryno=$1&subcategoryno=$2 [NC,L]
RewriteRule ^SubProducts/([0-9]+)/([0-9]+)$ subcategoryproducts.php?categoryno=$1&subcategoryno=$2 [NC,L]
RewriteRule ^Productenquiry/([0-9]+)$ productenquiry.php?productno=$1 [NC,L]
RewriteRule ^Productdetails/([0-9]+)$ productdetails.php?productno=$1 [NC,L]
RewriteRule ^NewarrivalProducts$ newarrivals.php [NC,L]
RewriteRule ^ShamsNaturalsCompany-Profile$ aboutus.php [NC,L]
RewriteRule ^ContactShamsNaturals$ contactus.php [NC,L]
RewriteRule ^DealerSelector$ dealerselector.php [NC,L]
RewriteRule ^ShamsNaturalsVideos$ videos.php [NC,L]

# === Enable compression ===
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css text/javascript text/xml text/plain image/x-icon image/svg+xml application/rss+xml application/javascript application/x-javascript application/xml application/xhtml+xml font/ttf font/otf font/opentype application/vnd.ms-fontobject
  BrowserMatch ^Mozilla/4 gzip-only-text/html
  BrowserMatch ^Mozilla/4\.0[678] no-gzip
  BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# === PHP Handler ===
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php82___lsphp .php .php8 .phtml
</IfModule>

